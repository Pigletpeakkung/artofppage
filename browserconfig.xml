<?xml version="1.0" encoding="utf-8"?>
<browserconfig>
    <msapplication>
        <tile>
            <square70x70logo src="/assets/icons/ms-icon-70x70.png"/>
            <square150x150logo src="/assets/icons/ms-icon-150x150.png"/>
            <wide310x150logo src="/assets/icons/ms-icon-310x150.png"/>
            <square310x310logo src="/assets/icons/ms-icon-310x310.png"/>
            <TileColor>#8b5cf6</TileColor>
        </tile>
        
        <notification>
            <polling-uri src="/api/notifications/updates"/>
            <frequency>360</frequency>
            <cycle>1</cycle>
        </notification>
        
        <application>
            <name>Pegearts</name>
            <description>AI Creative Designer &amp; Voice Artist Portfolio</description>
            <author>Thanatsitt Santisamranwilai</author>
            <version>1.2.0</version>
            <category>Business &amp; Technology</category>
            <keywords>AI Designer, Voice Artist, Web Development, Creative Technology, Portfolio</keywords>
            <url>https://pegearts.vercel.app</url>
        </application>
        
        <pinnedsite>
            <jumplist>
                <task>
                    <name>View Portfolio</name>
                    <action-uri>/#projects</action-uri>
                    <icon-uri>/assets/icons/ms-icon-70x70.png</icon-uri>
                    <tooltip>Browse latest projects</tooltip>
                </task>
                <task>
                    <name>Voice Samples</name>
                    <action-uri>/#skills</action-uri>
                    <icon-uri>/assets/icons/ms-icon-70x70.png</icon-uri>
                    <tooltip>Listen to voice demonstrations</tooltip>
                </task>
                <task>
                    <name>Contact</name>
                    <action-uri>/#contact</action-uri>
                    <icon-uri>/assets/icons/ms-icon-70x70.png</icon-uri>
                    <tooltip>Get in touch for projects</tooltip>
                </task>
            </jumplist>
            
            <navbutton>
                <color>#8b5cf6</color>
            </navbutton>
            
            <tooltip>Pegearts - AI Creative Designer &amp; Voice Artist</tooltip>
        </pinnedsite>
    </msapplication>
</browserconfig>
